{% extends 'kerko/item.html.jinja2' %}

{% block kerko_item_js %}
    {%- assets "item_js" %}
        <script src="{{ ASSET_URL }}"></script>
    {%- endassets %}
{% endblock kerko_item_js %}

{% block kerko_print_js %}
    {%- if config.kerko.features.print_item_link %}
        {%- assets "print_js" %}
            <script src="{{ ASSET_URL }}"></script>
        {%- endassets %}
    {%- endif %}
{% endblock kerko_print_js %}

{% block content_header %}
    <h1 class="rule my-2 clearfix">
        {{- badges(item, mode='item') -}}
        {{- title|escape -}}
    </h1>
{% endblock content_header %}

{%- block embedded_metadata_coins %}
    {# COinS removed. See issue R7385. #}
{%- endblock embedded_metadata_coins %}
